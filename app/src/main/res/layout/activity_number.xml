<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumberActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_arrow_back"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="266dp"
        android:layout_height="72dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/andada"
        android:text="@string/raqamingiz"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_oddiy"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="@string/tasdiqlash_cod"
        android:textSize="18sp"
        android:textColor="#D5171618"
        android:fontFamily="@font/andada"
        android:layout_marginTop="15dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_background"
        android:hint="@string/nomer"
        android:padding="3dp"
        android:orientation="horizontal"
        android:textColorHint="@color/black"
        android:theme="@style/InputLayoutOutlined"
        app:expandedHintEnabled="false"
        app:hintAnimationEnabled="true"
        app:hintTextColor="#B2171618">

        <com.santalu.maskedittext.MaskEditText
            android:id="@+id/edit_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:inputType="phone"
            android:text="+998"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="serif"
            app:met_mask="#### ## ### ## ##" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/number_btn"
        android:layout_width="339dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_radius"
        android:text="@string/davom_etish"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/andada"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="28dp"
        android:layout_height="27dp"
        android:text="OR"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#BF171618"
        android:fontFamily="@font/andada"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_btn"
        android:layout_width="339dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/sms_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_arrow_back"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="23dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/andada"
            android:gravity="center"
            android:text="@string/register"
            android:textColor="#171618"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="266dp"
        android:layout_height="36dp"
        android:textSize="28sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#171618"
        android:text="@string/getting_started"
        android:fontFamily="@font/andada"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="277dp"
        android:layout_height="54dp"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#BF171618"
        android:text="@string/seems_you"
        android:fontFamily="@font/andada"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_background"
        android:orientation="horizontal"
        android:textColorHint="@color/black"
        android:theme="@style/InputLayoutOutlined">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:hint="@string/name"
            android:padding="12dp"
            android:background="@null"
            android:textColorHint="#A3171618"
            android:textColor="#171618"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_background"
        android:orientation="horizontal"
        android:textColorHint="@color/black"
        android:theme="@style/InputLayoutOutlined">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lost_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:hint="@string/lost_name"
            android:padding="12dp"
            android:background="@null"
            android:textColorHint="#A3171618"
            android:textColor="#171618"/>

    </com.google.android.material.textfield.TextInputLayout>
    
    <CheckBox
        android:id="@+id/checkBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/by_creating"
        android:textColor="#BF171618"
        android:fontFamily="@font/andada"
        android:textSize="16sp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/info_btn"
        android:layout_width="339dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_radius"
        android:text="@string/davom_etish"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/andada"
        android:textSize="16sp"/>

